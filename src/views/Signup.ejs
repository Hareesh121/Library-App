                        </div>

                        <div class="form-group">
                          <label for="phonenumber" class="text-danger"></span></label>
                            <input type="text" class="form-control"  id= "phno" placeholder="Phonenumber">
                        
                          </div>
                       




                        <div class="form-group">
                          <label for="InputPassword1"><span id="pass1" class="text-danger"></span></label>
                            <input type="password" class="form-control"id="password" placeholder="Password">
                            
                       
                        
                        
                        <div class="progress" id="prog" style=" height: 5px; margin-top: 4px;">
                          <div class="progress-bar" id="strength" role="progressbar"style="width: 0px; height: 5px;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        
                        <div id="message">
                          <h3>Password must contain the following:</h3>
                          <p id="letter" ><b>*</b>A lowercase letter</p>
                          <p id="capital"><b>*</b>A capital (uppercase) letter</p>
                          <p id="number" ><b>*</b>A number</p>
                          <p id="length"><b>*</b>Minimum 8 characters</p>
                        </div>
                        
                      </div>

                        <div class="form-group">
                             <label for="confirmPassword"><span id="pass2" class="text-danger"></span></label>
                            <input type="password" class="form-control" id="confpass"placeholder="Confirm password">
                        </div>
    
                        <div class="form-group">
                          <div class="form-check">

                          </div>
                        </div>

                     
            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
